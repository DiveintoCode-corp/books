<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <div class="col-xs-12">
      <p id="notice"><%= notice %></p>
      <ul class="detail">
        <li><%= image_tag(@book.picture_url, size:'300x300') if @book.picture.present? %></li>
        <li>Title:<%= @book.title %></li>
        <li>Memo:<%= @book.memo %></li>
        <li>Author:<%= @book.author %></li>
      </ul>
      <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-default btn-sm btn_B" %>
      <%= link_to 'Back', books_path, class: "btn btn-default btn-sm btn_B" %>
    </div>
  </div>
</div>
